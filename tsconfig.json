{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es2015", "es6"],
    "module": "commonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
